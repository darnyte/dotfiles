#!/usr/bin/env bash

# Resample given image file
#
# @param 1 - image file
resample()
{
	local ICON SIZE D

	while read ICON SIZE
	do
		[[ $ICON == */* ]] && {
			D=${ICON%/*}
			[ -d "$D" ] || mkdir -p "$D" || return 1
		}

		[[ $SIZE == *x* ]] || SIZE='x'$SIZE

		convert $1 -thumbnail $SIZE -strip $ICON
	done
}

# Android action icons
#
# @param 1 - image file
android_action_bar()
{
	local F=${1##*/}

	resample $1 <<EOF
${OUTDIR}res/drawable-ldpi/$F 18
${OUTDIR}res/drawable-mdpi/$F 24
${OUTDIR}res/drawable-hdpi/$F 36
${OUTDIR}res/drawable-xhdpi/$F 48
EOF
}

# Android status bar/notification icons for Android 2.0 and lower
#
# @param 1 - image file
android_status_bar()
{
	local F=${1##*/}

	resample $1 <<EOF
${OUTDIR}res/drawable/$F 25
EOF
}

# Android status bar/notification icons for Android 2.3
#
# @param 1 - image file
android_status_bar_v9()
{
	local F=${1##*/}

	resample $1 <<EOF
${OUTDIR}res/drawable-ldpi-v9/$F 12x19
${OUTDIR}res/drawable-mdpi-v9/$F 16x25
${OUTDIR}res/drawable-hdpi-v9/$F 24x38
EOF
}

