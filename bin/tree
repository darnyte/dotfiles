#!/usr/bin/env bash

# Show files in a tree structure
#
# @param 1 - root directory
# @param 2 - level
tree()
{
	local F N=0 L='|' D=${1:-.}

	for F in "$D"/*
	do
		[ -r "$F" ] && (( ++N ))
	done

	for F in "$D"/*
	do
		[ -r "$F" ] || continue

		(( --N == 0 )) && L=' '

		echo "${2}+- ${F##*/}"

		[ -d "$F" ] && tree "$F" "$2$L  "
	done

	return 0
}

[ "$0" == "$BASH_SOURCE" ] && tree "$@"
