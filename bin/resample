#!/usr/bin/env bash

# Use Inkscape to resample
#
# @param 1 - input file
# @param 2 - output file
# @param 3 - size
resample_inkscape()
{
	"$INKSCAPE" \
		"$1" \
		-e "$2" \
		-w "$3" \
		-h "$3"
}

# Use convert to resample
#
# @param 1 - input file
# @param 2 - output file
# @param 3 - size
resample_convert()
{
	convert \
		-background none \
		"$1" \
		-thumbnail "$3" \
		-strip \
		"$2"
}

# Resample given image
#
# @param 1 - source image
# @param ... - sizes
resample()
{
	local SRC=$1 RESAMPLE=resample_convert

	if ! [ -r "$SRC" ]
	then
		echo "error: ${SRC:-file} not found" >&2
		return 1
	fi

	case "$SRC" in
		*.svg)
			[ -x "$INKSCAPE" ] && RESAMPLE=resample_inkscape
			;;
	esac

	local DST=${SRC%.*}
	local SIZE

	shift

	# don't quote @ because it will make the default values
	# into one argument
	# shellcheck disable=SC2068
	for SIZE in ${@:-128 64 32}
	do
		$RESAMPLE "$SRC" "$DST-$SIZE.png" "$SIZE" || {
			echo "error: failed to convert $SRC to $SIZE" >&2
			return 1
		}
	done
}

INKSCAPE=$(which inkscape) ||
	INKSCAPE='/Applications/Inkscape.app/Contents/Resources/bin/inkscape'

if [ "${BASH_SOURCE[0]}" == "$0" ]
then
	if (( ${#@} < 2 ))
	then
		echo "usage: ${0##*/} FILE SIZE..." >&2
		exit 1
	fi

	resample "$@"
fi
